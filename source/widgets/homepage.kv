<HomeScreen>:
    FloatLayout:
        Label:
            text: 'Login'
            font_size: 40
            pos: 0, 150
            pos_hint: {"top": 1.21, "center_x": 0.5}

        FloatLayout:

            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: None, None

            Button:
                text: "Admin"
                font_size: 30
                size: 250, 200
                size_hint: None, None
                pos_hint: {"center_x": -0.8, "center_y": 0.5}
                on_press: app.open_admin_login_popup()

            Button:
                text: "Auditor"
                font_size: 30
                size: 250, 200
                size_hint: None, None
                pos_hint: {"center_x": 1.7, "center_y": 0.5}

            Button:
                text: 'Exit'
                font_size: 30
                size: 500, 100
                size_hint: None, None
                on_press: app.exit()
                pos_hint: {"center_y": -1, "center_x": 0.45}

<AdminLoginPopup>

    id: popup
    auto_dismiss: True
    title: "Enter Your Admin Password"
    size_hint: None, None
    size: 400, 125

    GridLayout:
        rows: 2

        TextInput:
            id: popup_text_input
            focus: False
            password: True
            multiline: False
            size: 375, 30
            size_hint: None, None
            on_text_validate: root.validate_password(self.text)

        Button:
            text: "Exit"
            font_size: 30
            size: 375, 30
            size_hint: None, None
            on_press: root.dismiss()

