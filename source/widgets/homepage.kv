<HomeScreen>:
    FloatLayout:
        Label:
            text: 'Login'
            font_size: 40
            pos: 0, 150
            pos_hint: {"top": 1.21, "center_x": 0.5}
        FloatLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: None, None
            Button:
                text: "Admin"
                font_size: 30
                size: 250, 200
                size_hint: None, None
                pos_hint: {"center_x": -0.8, "center_y": 0.5}
                on_press: app.admin_login()
            Button:
                text: "Auditor"
                font_size: 30
                size: 250, 200
                size_hint: None, None
                pos_hint: {"center_x": 1.7, "center_y": 0.5}
            Button:
                text: 'Exit'
                font_size: 30
                size: 500, 100
                size_hint: None, None
                on_press: app.exit()
                pos_hint: {"center_y": -1, "center_x": 0.45}
