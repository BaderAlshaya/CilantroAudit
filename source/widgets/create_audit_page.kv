<CreateAuditPage>:

    question_list: question_list

    FloatLayout:
        size: root.width, root.height

        ScrollView:
            size_hint: 1, .85
            pos_hint: {"top": 1}

            StackLayout:
                id: question_list
                size_hint_y: None

        Button:
            text: "Add Question"
            size_hint: .15, .1
            on_press: root.add_question()

        Button:
            text: "Submit"
            size_hint: .15, .1
            pos_hint: {"right": 1, "y": 0}

        Button:
            text: "Back"
            size_hint: .15, .1
            pos_hint: {"right": .85, "bottom": 0}