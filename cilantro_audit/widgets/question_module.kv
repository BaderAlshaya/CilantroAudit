#:import GREEN cilantro_audit.constants.RGB_GREEN

<QuestionModule>
    question_text: question_text
    delete_question: delete_question
    yes_button: yes_button
    no_button: no_button
    other_button: other_button

    size_hint: 1, None
    height: 200

    TextInput:
        id: question_text
        size_hint: 0.8, 0.45
        pos_hint: {"top": 0.9 , "center_x": 0.45}

    Button:
        id: delete_question
        size_hint: 0.08, 0.06
        background_color: 2, 0, 0, 1
        text: "Delete"
        pos_hint: {"top": 0.95, "center_x": 0.93}

    Label:
        outline_width: 2
        color: 1, 1, 1, 1
        text: "Click to cycle through the severity of each response"
        pos_hint: {"top": 0.9 , "center_x": 0.4}

    Button:
        id: yes_button
        text: 'G'
        background_color: GREEN
        size: 40, 40
        size_hint: None, None
        pos_hint: {"top": 0.3, "center_x": 0.2}
        on_release:
            root.yes_btn_press()

    Label:
        text: "Yes"
        pos_hint: {"top": 0.75 , "center_x": 0.25}

    Button:
        id: no_button
        text: 'G'
        background_color: GREEN
        size: 40, 40
        size_hint: None, None
        pos_hint: {"top": 0.3, "center_x": 0.4}
        on_release: root.no_btn_press()

    Label:
        text: "No"
        pos_hint: {"top": 0.75 , "center_x": 0.45}


    Button:
        id: other_button
        text: 'G'
        size: 40, 40
        size_hint: None, None
        pos_hint: {"top": 0.3, "center_x": 0.6}
        background_color: GREEN
        on_release:
            root.other_btn_press()

    Label:
        text: "Other"
        pos_hint: {"top": 0.75 , "center_x": 0.65}
