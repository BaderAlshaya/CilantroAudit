<AdminPage>:

<TemplatesUnlockedPop>:
    no: no
    yes: yes
    size_hint: .5, .5
    title: "Unlock Confirmation"

    FloatLayout:
        Label:
            text: "Are you sure you want to unlock all locked audits?"
            size_hint: 0.6, 0.2
            font_size: root.width/30
            pos_hint: {"x": .2, "top": .9}

        Button:
            id: no
            text: "No"
            size_hint: .3, .3
            font_size: root.width/30
            pos_hint: {"right": 1, "y": 0}
            on_release:
                root.dismiss()

        Button:
            id: yes
            text: "Yes"
            size_hint: .3, .3
            font_size: root.width/30
            pos_hint: {"x": 0, "y": 0}

<PasswordMismatchPopup>
    id: password_mismatch_popup
    auto_dismiss: True
    title: "Passwords Do Not Match"
    size_hint: None, None
    size: 400, 150

    Button:
        text: "OK"
        font_size: 30
        size: 187.5, 30
        size_hint: None, None
        on_release: root.dismiss()

<InvalidPasswordPopup>
    id: invalid_password_popup
    auto_dismiss: True
    title: "Invalid Password"
    size_hint: None, None
    size: 400, 150

    Button:
        text: "OK"
        font_size: 30
        size: 187.5, 30
        size_hint: None, None
        on_release: root.dismiss()

<PasswordResetSuccessPopup>
    id: password_reset_success_popup
    auto_dismiss: True
    title: "Your Password Has Been Updated"
    size_hint: None, None
    size: 400, 150

    Button:
        text: "OK"
        font_size: 30
        size: 187.5, 30
        size_hint: None, None
        on_release: root.dismiss()

<InputCurrentPasswordPopup>
    id: confirm_old_password
    auto_dismiss: True
    title: "Enter Current Password"
    size_hint: None, None
    size: 400, 150

    GridLayout:
        rows: 2
        spacing: 10

        TextInput:
            id: current_password_input_popup
            focus: False
            password: True
            multiline: False
            size: 375, 30
            size_hint: None, None
            on_text_validate: root.try_create_password(self.text)

        GridLayout:
            rows: 1
            cols: 2

            Button:
                text: "Cancel"
                font_size: 30
                size: 187.5, 30
                size_hint: None, None
                on_release:
                    root.dismiss()

            Button:
                text: "Submit"
                font_size: 30
                size: 187.5, 30
                size_hint: None, None
                on_release: root.try_create_password(root.content.children[1].text)

<InputNewPasswordPopup>
    id: popup
    auto_dismiss: True
    title: "Create New Password"
    size_hint: None, None
    size: 400, 300

    GridLayout:
        rows: 5
        spacing: 10

        Label:
            text: "New Password"

        TextInput:
            id: new_password_input1
            focus: False
            password: True
            multiline: False
            size: 375, 30
            size_hint: None, None

        Label:
            text: "New Password (Again)"

        TextInput:
            id: new_password_input2
            focus: False
            password: True
            multiline: False
            size: 375, 30
            size_hint: None, None

        GridLayout:
            rows: 1
            cols: 2

            Button:
                text: "Cancel"
                font_size: 30
                size: 187.5, 30
                size_hint: None, None
                on_release: root.dismiss()

            Button:
                text: "Submit"
                font_size: 30
                size: 187.5, 30
                size_hint: None, None
                on_release: root.try_update_password(root.content.children[1].text, root.content.children[3].text)
