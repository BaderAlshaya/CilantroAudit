<AdminPage>:

    FloatLayout:

        Label:
            text: 'Admin Page'
            font_size: 40
            pos: 0, 150

        Button:
            text: "Create Audit"
            font_size: 30
            size: 250, 200
            size_hint: None, None
            pos_hint:{"center_x":0.5,"center_y":0.5}
            on_press: root.manager.current = 'CreateAuditTemplatePage'

        Button:
            text: "Return to Home Page"
            font_size: 30
            size: 300, 100
            size_hint: None, None
            pos_hint:{"center_x": 0.5, "center_y": 0.25}
            on_press: root.manager.current = 'HomeScreen'

        Button:
            text: "Exit"
            font_size: 30
            size: 300, 100
            size_hint: None, None
            pos_hint:{"center_x": 0.5}
            on_press: app.exit()
