<CreateCompletedAuditPage>:
    stack_list: stack_list
    title_label: title_label
    auditor_name: auditor_name
    size: root.width, root.height
    scrolling_panel: scrolling_panel

    GridLayout:
        rows: 2
        row_force_default: True
        row_default_height: 30
        size_hint_y: 0.1
        pos_hint: {"top": .95}

        Label:
            id: title_label
            text: "Audit Name:  " + root.audit_title
            bold: True
            background_color: (0, 0, 0, 1)
            foreground_color: (0, 1, 0, 1)
            color: 0, 1, 0, 1
            readonly: True

        TextInput:
            id: auditor_name
            multiline: False
            hint_text: "Please Enter Your Name"

    GridLayout:
        cols: 1
        rows: 2
        size_hint_y: 0.85

        ScrollView:
            pos_hint: {"top": .6}
            id: scrolling_panel

            StackLayout:
                id: stack_list
                size_hint_y: None
                minimum_height: 10

                GridLayout:
                    row_force_default: True
                    row_default_height: 30
                    cols: 2
                    spacing: 200
                    size_hint_y: None

        GridLayout:
            cols: 2
            size_hint_y: 0.1

            Button:
                text: "Submit"
                size_hint_y: None
                size: 400, 60
                font_size: root.width/30
                on_press: root.submit_audit_pop(root.manager)

            Button:
                text: "Back"
                size_hint_y: None
                size: 400, 60
                font_size: root.width/30
                on_press: root.back(root.manager)
