#:import VIEW_AUDIT_TEMPLATES cilantro_audit.constants.VIEW_AUDIT_TEMPLATES
#:import AUDITOR_COMPLETED_AUDITS_LIST_PAGE cilantro_audit.constants.AUDITOR_COMPLETED_AUDITS_LIST_PAGE

<AuditorPage>:
    FloatLayout:
        FloatLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint: None, None

            Button:
                text: "Submit New Audit"
                font_size: 20
                size: 250, 100
                size_hint: None, None
                pos_hint: {"center_x": -0.8, "center_y": 0.8}
                on_release:
                    root.manager.current = VIEW_AUDIT_TEMPLATES

            Button:
                text: "View Submitted Audits"
                font_size: 20
                size: 250, 100
                size_hint: None, None
                pos_hint: {"center_x": 1.8, "center_y": 0.8}
                on_release:
                    root.manager.current = AUDITOR_COMPLETED_AUDITS_LIST_PAGE
                    root.manager.get_screen(AUDITOR_COMPLETED_AUDITS_LIST_PAGE).load_completed_audits()

            Button:
                text: "Return to Homepage"
                font_size: 20
                size: 250, 100
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "center_y": -0.3}
                on_release:
                    root.manager.current = 'HomeScreen'

            Button:
                text: "Exit"
                font_size: 20
                size: 150, 100
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "center_y": -1.4}
                on_release:
                    exit()
