#:import RGB_BACKGROUND cilantro_audit.constants.RGB_BACKGROUND

<ViewAuditTemplates>:


<ViewAuditTemplatesContent>:
    templates_list: templates_list

    GridLayout:
        name: 'body-grid'
        rows: 4
        cols: 3

        # 1st Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        # 2nd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        GridLayout:
            rows: 2
            cols: 1
            spacing: 5

            GridLayout:
                rows: 2
                cols: 1
                spacing: 5

                ScrollView:
                    StackLayout:
                        id: templates_list
                        height: self.minimum_height
                        size_hint: 1, None

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        # 3rd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        CilantroButton:
            text: 'Refresh List'
            size_hint: 1, 0.1
            on_release:
                root.refresh_audit_templates()

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        # 4th Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1


<ActiveAuditButton@CilantroButton>:
    name: 'active_button_template'
    size_hint_y: None
    height: 70

    on_release:
        self.text

<InactiveAuditButton@Button>:
    name: 'inactive_button_template'
    size_hint_y: None
    height: 70
    background_normal: ''
    background_color: RGB_BACKGROUND


<LockedTemplatePop>:
    title: "Can't Open Template"
    size_hint: .5, .5

    FloatLayout:
        Label:
            text: "The audit you selected has already been completed."
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "top": .9}

        Button:
            text: "OK"
            size_hint: .3, .3
            pos_hint: {"center_x": .5, "y": 0}
            on_release:
                root.dismiss()
