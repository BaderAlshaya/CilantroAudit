#:import CILANTRO_BLACK_THEME cilantro_audit.constants.CILANTRO_BLACK_THEME
#:import CILANTRO_DARK_THEME cilantro_audit.constants.CILANTRO_DARK_THEME

<ViewAuditTemplates>:


<ViewAuditTemplatesContent>:
    templates_list: templates_list

    GridLayout:
        rows: 3
        cols: 3

        canvas.before:
            Color:
                rgba: CILANTRO_DARK_THEME
            Rectangle:
                pos: self.pos
                size: self.size

        # 1st Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        # 2nd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        GridLayout:
            rows: 2
            cols: 1

            GridLayout:
                rows: 2
                cols: 1

                ScrollView:
                    StackLayout:
                        id: templates_list
                        height: self.minimum_height
                        size_hint: 1, None
                        spacing: 2

                        canvas.before:
                            Color:
                                rgba: CILANTRO_BLACK_THEME
                            Rectangle:
                                pos: self.pos
                                size: self.size

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 1

        # 3rd Row
        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 1, 0.1

        Widget:
            name: 'place-holder'
            size_hint: 0.1, 0.1


<ActiveAuditButton@CilantroButton>:
    name: 'active_button_template'
    size_hint_y: None
    height: 70

    on_release:
        self.text


<InactiveAuditButton@Button>:
    name: 'inactive_button_template'
    size_hint_y: None
    height: 70
    color: CILANTRO_BLACK_THEME
    background_normal: ''
    background_color: CILANTRO_DARK_THEME


<LockedTemplatePop>:
    title: "Can't Open Template"
    size_hint: .5, .5

    FloatLayout:
        Label:
            text: "The audit you selected has already been completed."
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "top": .9}

        Button:
            text: "OK"
            size_hint: .3, .3
            pos_hint: {"center_x": .5, "y": 0}
            on_release:
                root.dismiss()
