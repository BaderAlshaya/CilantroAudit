#:kivy 1.11.1


Manager:
    Root:
    AnotherPage:


<Root>:
    BoxLayout:
        orientation: 'vertical'

        Header:
        Body:
        Footer:


<Header>:
    name: 'header'
    size_hint: 1, 0.1

    BoxLayout:
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgb: 0.275, 0.314, 0.275, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            id: back_page
            text: 'Back'
            size_hint: 0.3, 1.0
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 0.3
                root.manager.current = 'another_page'

        Label:
            text: 'Submitted Audits'
            font_size: 20
            color: 1.0, 1.0, 1.0, 1

        Button:
            text: 'Exit'
            size_hint: 0.3, 1.0
            on_release:
                app.exit()


<Body>:
    name: 'body'
    size_hint: 1, 0.8

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgb: 0.275, 0.314, 0.275, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            name: 'top-row'
            size_hint: 1.0, 0.1

        BoxLayout:
            orientation: 'horizontal'

            Label:
                name: 'left-col'
                size_hint: 0.3, 1.0

            ScrollView:
                name: 'middle-col'

                StackLayout:
                    id: audits_list
                    height: self.minimum_height
                    size_hint_y: None

            Label:
                name: 'right-col'
                size_hint: 0.3, 1.0

        Label:
            name: 'bottom-row'
            size_hint: 1.0, 0.1


<Footer>:
    name: 'footer'
    size_hint: 1, 0.1

    BoxLayout:
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgb: 0.2, 0.2, 0.2, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: 'Return Home'
            on_release:
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = 0.3
                root.manager.current = 'another_page'


<AuditButton@Button>:
    text: 'Test'
    size_hint_y: None
    on_release:
        root.manager.transition.direction = 'up'
        root.manager.transition.duration = 0.3
        root.manager.current = 'another_page'


<AnotherPage>:
    Button:
        name: 'another_page'
        text: 'Another Page'
        font_size: 40
        on_release:
            root.manager.current = 'home_page'