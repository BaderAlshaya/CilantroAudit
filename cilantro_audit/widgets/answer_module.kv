<AnswerModule>:

#:import GREY_LIGHT cilantro_audit.constants.RGB_GREY_LIGHT

    question_label: question_label
    yes_box: yes_box
    no_box: no_box
    other_box: other_box

    GridLayout:
        id: page_layout
        rows: 2
        size_hint: 1, None
        height: 200
        pos_hint: {"top": 0.9 , "center_x": 0.5}

        # Question text - nasty hard-code but positioning is annoying
        Label:
            id: question_label
            text: root.question_text
            color: 1, 1, 1, 1
            pos_hint: {"top": 0.9 , "center_x": 0.5}
            text_size: root.width-100, None

        GridLayout:
            cols: 6
            size_hint: None, None
            col_default_width: cm(1)

            Button:
                id: yes_box
                background_color: GREY_LIGHT
                size: 60, 60
                size_hint: None, None
                on_press: root.yes_box_press()

            ##yes label
            Label:
                text: "Yes"

            Button:
                id: no_box
                background_color: GREY_LIGHT
                size: 60, 60
                size_hint: None, None
                on_press: root.no_box_press()

            ##no label
            Label:
                text: "No"

            Button:
                id: other_box
                background_color: GREY_LIGHT
                size: 60, 60
                size_hint: None, None
                on_press: root.other_box_press()

            ##other label
            Label:
                text: "Other"
