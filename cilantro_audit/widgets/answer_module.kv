<AnswerModule>:

#:import GREY_LIGHT cilantro_audit.constants.RGB_GREY_LIGHT

    question_label: question_label
    yes_box: yes_box
    no_box: no_box
    other_box: other_box

    size_hint: 1, None
    height: 200

    # Question text - nasty hard-code but positioning is annoying
    Label:
        id: question_label
        text: root.question_text
        color: 1, 1, 1, 1
        size_hint: 0.8, 0.45
        pos_hint: {"top": 0.9 , "center_x": 0.5}
        text_size: root.width-100, None

    Button:
        id: yes_box
        background_color: GREY_LIGHT
        size: 60, 60
        size_hint: None, None
        pos_hint: {"top": 0.35, "center_x": 0.1}
        on_press: root.yes_box_press()

    ##yes label
    Label:
        text: "Yes"
        pos_hint: {"top": 0.7 , "center_x": 0.14}

    Button:
        id: no_box
        background_color: GREY_LIGHT
        size: 60, 60
        size_hint: None, None
        pos_hint: {"top": 0.35, "center_x": 0.3}
        on_press: root.no_box_press()

    ##no label
    Label:
        text: "No"
        pos_hint: {"top": 0.7 , "center_x": 0.34}

    Button:
        id: other_box
        background_color: GREY_LIGHT
        size: 60, 60
        size_hint: None, None
        pos_hint: {"top": 0.35, "center_x": 0.5}
        on_press: root.other_box_press()

    ##other label
    Label:
        text: "Other"
        pos_hint: {"top": 0.7 , "center_x": 0.55}
