#:import CILANTRO_BLACK_THEME cilantro_audit.constants.CILANTRO_BLACK_THEME
#:import CILANTRO_WHITE_THEME cilantro_audit.constants.CILANTRO_WHITE_THEME

<CilantroLabel@Label>:
    text: 'Label Template'
    halign: 'center'
    valign: 'middle'
    text_size: self.width, self.height
    font_name:
    font_family:
    font_size: 30
    color: CILANTRO_WHITE_THEME
    disabled_color: 0, 0, 0, 0
    bold: 0
    italic: 0
    underline: 0
    strikethrough: 0
    outline_width: 0
    outline_color:
    disabled_outline_color:
    padding_x:
    padding_y:
    shorten:
    mipmap:
    line_height:
    max_lines:
    strip:
    shorten_from:
    split_str:
    ellipsis_options:
    unicode_errors:
    markup:
    font_hinting:
    font_kerning:
    font_blended:
    font_context:
    font_features:
    base_direction:
    text_language:

    # Label Background Color
    canvas.before:
        Color:
            rgba: CILANTRO_BLACK_THEME
        Rectangle:
            pos: self.x+1, self.y+2
            size: self.width-2, self.height-2