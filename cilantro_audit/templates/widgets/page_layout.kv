
<AuditPageTemplate>:
    GridLayout:
        rows: 3
        cols: 1

        canvas.before:
            Color:
                rgba: 0.196, 0.235, 0.196, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            name: 'header-grid'
            rows: 1
            cols: 3
            size_hint: 1, 0.1

            AuditButtonTemplate:
                text: 'Back'

            Label:
                text: 'Page Title'

            AuditButtonTemplate:
                text: 'Exit'
                on_release:
                    exit(1)

        GridLayout:
            name: 'body-grid'
            cols: 3
            size_hint: 1, 0.8

        GridLayout:
            name: 'footer-grid'
            rows: 1
            cols: 3
            size_hint: 1, 0.1

            AuditButtonTemplate:
                text: 'Homepage'
                on_release:
                    root.manager.current = ADMIN_SCREEN
                    root.manager.transition.duration = 0.3
                    root.manager.transition.direction = 'right'
