
<CilantroPage>:
    page: page
    header: header
    header_back: header_back
    header_title: header_title
    header_home: header_home
    body: body
    footer: footer

    GridLayout:
        id: page
        rows: 3
        cols: 1

        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1.0
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            id: header
            name: 'header-grid'
            rows: 1
            cols: 3
            size_hint: 1, 0.1

            CilantroButton:
                id: header_back
                text: 'Back'

            CilantroLabel:
                id: header_title
                text: 'Template Page'

            CilantroButton:
                id: header_home
                text: 'Return to Homepage'

        GridLayout:
            id: body
            name: 'body-grid'
            rows: 1
            cols: 1

        GridLayout:
            id: footer
            name: 'footer-grid'
            rows: 1
            cols: 1
            size_hint: 1, 0.1

            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1.0
                Rectangle:
                    pos: self.x, self.y+self.height
                    size: self.width, self.height/(self.height-1)

            CilantroButton:
                text: 'Refresh Page'
