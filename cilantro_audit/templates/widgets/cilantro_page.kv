#:import CILANTRO_BLACK_THEME cilantro_audit.constants.CILANTRO_BLACK_THEME
#:import CILANTRO_DARK_THEME cilantro_audit.constants.CILANTRO_DARK_THEME
#:import CILANTRO_GREY_THEME cilantro_audit.constants.CILANTRO_GREY_THEME
#:import CILANTRO_WHITE_THEME cilantro_audit.constants.CILANTRO_WHITE_THEME

<CilantroPage>:
    header: header
    footer_back: footer_back
    header_title: header_title
    body: body
    footer: footer
    footer_refresh: footer_refresh

    GridLayout:
        rows: 3
        cols: 1

        canvas.before:
            Color:
                rgba: CILANTRO_BLACK_THEME
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            id: header
            name: 'header-grid'
            rows: 1
            cols: 3
            size_hint: 1, 0.1

            canvas.before:
                Color:
                    rgba: CILANTRO_BLACK_THEME
                Rectangle:
                    pos: self.pos
                    size: self.size

                Color:
                    rgba: CILANTRO_GREY_THEME
                Rectangle:
                    pos: self.x, self.y
                    size: self.width, self.height/(self.height-1)

            CilantroLabel:
                id: header_title
                text: 'Template Page'

        GridLayout:
            id: body
            name: 'body-grid'
            rows: 1
            cols: 1

            canvas.before:
                Color:
                    rgba: CILANTRO_BLACK_THEME
                Rectangle:
                    pos: self.x, self.y
                    size: self.width, self.height

        GridLayout:
            id: footer
            name: 'footer-grid'
            rows: 1
            size_hint: 1, 0.1

            canvas.before:
                Color:
                    rgba: CILANTRO_GREY_THEME
                Rectangle:
                    pos: self.x, self.y+self.height
                    size: self.width, self.height/(self.height-1)

            CilantroButton:
                id: footer_back
                text: 'BACK'

            CilantroButton:
                id: footer_refresh
                text: 'Refresh Page'
